<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.RegisterFragment">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/ibm_plex_sans_bold"
            android:text="Create Account"
            android:textColor="#000000"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="10dp"
            android:text="Please Fill the input blow here."
            android:textColor="#000000"
            android:fontFamily="@font/ibm_plex_sans_light"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/faild1"
            android:layout_height="wrap_content"
            android:layout_width="338dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/search_edit_background"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <ImageView
                android:id="@+id/imagename"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_user" />

            <TextView
                android:id="@+id/fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:paddingTop="2dp"
                android:text="FULL NAME"
                android:textColor="#000000"
                android:fontFamily="@font/ibm_plex_sans_bold"
                app:layout_constraintStart_toEndOf="@+id/imagename"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/name"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:hint="Your Name"
                android:background="@android:color/transparent"
                android:inputType="textEmailAddress"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginEnd="10dp"
                android:textColor="#000000"
                android:textColorHint="@color/grey"
                android:textSize="18sp"
                android:fontFamily="@font/ibm_plex_sans_bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imagename"
                app:layout_constraintTop_toBottomOf="@+id/fullname" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/faild3"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/search_edit_background"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/faild2">

            <ImageView
                android:id="@+id/imagepassword"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_password" />

            <TextView
                android:id="@+id/pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:paddingTop="2dp"
                android:text="PASSWORD"
                android:fontFamily="@font/ibm_plex_sans_bold"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/imagepassword"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/password"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:hint="Your Password"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="#000000"
                android:textColorHint="@color/grey"
                android:textSize="18sp"
                android:fontFamily="@font/ibm_plex_sans_bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imagepassword"
                app:layout_constraintTop_toBottomOf="@+id/pass" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/register"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/button"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="SIGN UP"
            android:textSize="18sp"
            android:fontFamily="@font/ibm_plex_sans_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/texterror" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:fontFamily="@font/ibm_plex_sans_bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="â—€ Swipe To Left"
                android:fontFamily="@font/ibm_plex_sans_bold"
                android:textColor="#3A8891" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/faild4"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/search_edit_background"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/faild3">

            <ImageView
                android:id="@+id/imagepassword2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_password" />

            <TextView
                android:id="@+id/confirmationtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:paddingTop="2dp"
                android:text="PASSWORD CONFIRMATION"
                android:fontFamily="@font/ibm_plex_sans_bold"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/imagepassword2"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/confirmation"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:hint="Password Confirmation"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="#000000"
                android:textColorHint="@color/grey"
                android:textSize="18sp"
                android:fontFamily="@font/ibm_plex_sans_bold"                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imagepassword2"
                app:layout_constraintTop_toBottomOf="@+id/confirmationtext" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/faild2"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/search_edit_background"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/faild1">

            <ImageView
                android:id="@+id/imageemail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_email" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:paddingTop="2dp"
                android:text="EMAIL"
                android:fontFamily="@font/ibm_plex_sans_bold"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/imageemail"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/email"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                android:hint="Your Email"
                android:inputType="textEmailAddress"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="#000000"
                android:textColorHint="@color/grey"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageemail"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/texterror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:visibility="gone"
            android:textColor="#E91E63"
            android:fontFamily="@font/ibm_plex_sans_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/faild4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>